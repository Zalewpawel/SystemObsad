@model Sedziowanie.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edytuj użytkownika";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Imie"></label>
        <input asp-for="Imie" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nazwisko"></label>
        <input asp-for="Nazwisko" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="@(new SelectList(Model.AvailableRoles))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-action="ShowUsers" class="btn btn-secondary">Anuluj</a>
</form>
