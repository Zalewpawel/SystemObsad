@model Sedziowanie.Models.Niedyspozycja

@{
    ViewData["Title"] = "Dodaj Niedyspozycję";
    bool isSedzia = ViewBag.SedziaId != null;
}

<h2>Dodaj Niedyspozycję</h2>

<form asp-action="Add" method="post">
    @if (!isSedzia)
    {
        <div class="form-group">
            <label for="sedziaId" class="control-label">Sędzia</label>
            <select id="sedziaId" name="sedziaId" class="form-control" asp-items="ViewBag.Sedziowie"></select>
        </div>
    }
    else
    {
        <input type="hidden" name="sedziaId" value="@ViewBag.SedziaId" />
    }

    <div class="form-group">
        <label for="poczatek" class="control-label">Początek</label>
        <input type="datetime-local" id="poczatek" name="poczatek" class="form-control" />
    </div>

    <div class="form-group">
        <label for="koniec" class="control-label">Koniec</label>
        <input type="datetime-local" id="koniec" name="koniec" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Show" class="btn btn-secondary">Anuluj</a>
</form>
