@model Sedziowanie.Models.Niedyspozycja
@{
    ViewData["Title"] = "Dodaj Niedyspozycję";
}

<h2>Dodaj swoją niedyspozycję</h2>

<form asp-action="AddForSedzia" method="post">
    <input type="hidden" name="sedziaId" value="@ViewBag.SedziaId" />

    <div class="form-group">
        <label for="poczatek" class="control-label">Początek</label>
        <input type="datetime-local" id="poczatek" name="poczatek" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="koniec" class="control-label">Koniec</label>
        <input type="datetime-local" id="koniec" name="koniec" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Show" class="btn btn-secondary">Anuluj</a>
</form>
