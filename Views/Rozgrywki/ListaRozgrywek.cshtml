@model IEnumerable<Sedziowanie.Models.Rozgrywki>

@{
    ViewData["Title"] = "Lista Rozgrywek";
}

<style>
    .custom-card {
        background-color: #c5c2b8;
        border: 1px solid #bfb8a8;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        padding: 20px;
        color: white;
    }

        .custom-card h2 {
            color: white;
        }

    .custom-table td a {
        display: inline-block;
        padding: 6px 14px;
        background-color: #eceae4; 
        color: #333 !important; 
        border: 1px solid #ccc;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.2s ease;
    }

        .custom-table td a:hover {
            background-color: #d0ccc2;
            color: black !important;
        }

    .custom-table th {
        background-color: #f5f5f5;
        color: #333;
    }
</style>


<div class="container mt-3">
    <div class="custom-card">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <table class="table table-bordered table-hover custom-table text-center">
            <thead>
                <tr>
                    <th scope="col">Nazwa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rozgrywki in Model)
                {
                    <tr>
                        <td>
                            <a class="btn btn-custom-link" asp-action="MeczeRozgrywek" asp-route-rozgrywkiId="@rozgrywki.Id">
                                @rozgrywki.Nazwa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</div>


