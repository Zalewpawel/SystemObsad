@model IEnumerable<Sedziowanie.Models.Sedzia>

@{
    ViewData["Title"] = "Lista Sędziów";
}

<h2>Lista Sędziów</h2>

<table class="table table-bordered text-center">
    <thead class="thead-softgray">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Klasa</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sedzia in Model)
        {
            <tr>
                <td>@sedzia.Imie</td>
                <td>@sedzia.Nazwisko</td>
                <td>@sedzia.Klasa</td>
                <td>@sedzia.Telefon</td>
                <td>@sedzia.Email</td>
                <td>
                    <a asp-action="MeczeSedziego" asp-route-sedziaId="@sedzia.Id" class="btn btn-sm custom-btn btn-outline-secondary">
                        <i class="fas fa-list"></i> Zobacz Mecze
                    </a>

                    <a asp-action="Edit" asp-route-id="@sedzia.Id" class="btn btn-sm custom-btn btn-outline-primary">
                        <i class="fas fa-pen"></i> Edytuj
                    </a>

                    <a asp-action="Delete" asp-route-id="@sedzia.Id" class="btn btn-sm custom-btn" style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb;">
                        <i class="fas fa-trash"></i> Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
